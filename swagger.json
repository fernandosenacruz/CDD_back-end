{
  "openapi": "3.1.0",
  "info": {
    "title": "Api de Posts de frases desmotivacionais",
    "description": "Api de estudos desenvolvida para permitir cadastro simples de usuários e postagens com frases e imagens. Finalidade lúdica e humorística",
    "contact": {
      "name": "Suport",
      "url": "https://www.linkedin.com/in/fernandosenacruz/"
    },
    "license": "MIT",
    "version": "1.0.0",
    "x-logo": {
      "url": "../CDD_back-end/src/assets/img/cdd_logo.png"
    }
  },
  "paths": {
    "/login": {
      "post": {
        "requestBody": {
          "description": "Dados para realizar login",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseLogin"
                }
              }
            }
          },
          "404": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "Usuário não encontrado"
              },
              "statusCode": {
                "type": "number",
                "example": "404"
              }
            }
          },
          "401": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "Senha incorreta"
              },
              "statusCode": {
                "type": "number",
                "example": "401"
              }
            }
          }
        }
      }
    },
    "/posts": {
      "get": {
        "description": "Lista todos as postagens. Padrão 'limit=50'",
        "parameters": [
          {
            "description ": "Autor do post",
            "type": "number",
            "name": "authorId",
            "required": false,
            "in": "query"
          },
          {
            "description ": "Página",
            "type": "number",
            "name": "page",
            "required": false,
            "in": "query"
          },
          {
            "description ": "Limite de itens por página",
            "type": "number",
            "name": "limit",
            "required": false,
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Posts encontrados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponsePosts"
                }
              }
            }
          },
          "204": {
            "description": "Nenhum post cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponsePostNoContent"
                }
              }
            }
          },
          "401": {
            "description": "Token inválido/não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseUnauthorized"
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Cria uma postagem",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "requestBody": {
          "description": "Dados para criação de uma postagem",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreatePost"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCreatedPost"
                }
              }
            }
          },
          "401": {
            "description": "Token inválido/não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseUnauthorized"
                }
              }
            }
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "description": "Retorna um postagem.",
        "parameters": [
          {
            "description ": "Id da postagem",
            "type": "number",
            "name": "id",
            "required": true,
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "Post encontrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponsePost"
                }
              }
            }
          },
          "204": {
            "description": "Nenhum post cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponsePostNoContent"
                }
              }
            }
          },
          "401": {
            "description": "Token inválido/não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseUnauthorized"
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "Atualiza uma postagem",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "description ": "Id da postagem",
            "type": "number",
            "name": "id",
            "required": true,
            "in": "path"
          }
        ],
        "requestBody": {
          "description": "Dados para atualização de uma postagem",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestUpdatePost"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Post atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseUpdatedPost"
                }
              }
            }
          },
          "401": {
            "description": "Token inválido/não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseUnauthorized"
                }
              }
            }
          },
          "404": {
            "description": "Post não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponsePostNoContent"
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "Deleta uma postagem",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "description ": "Id da postagem",
            "type": "number",
            "name": "id",
            "required": true,
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "Post deletado com sucesso"
              },
              "statusCode": {
                "type": "number",
                "example": "200"
              }
            }
          },
          "404": {
            "description": "Post não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponsePostNoContent"
                }
              }
            }
          }
        }
      }
    },
