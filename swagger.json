              },
              "hasPrevPage": {
                "type": "boolean",
                "example": "false"
              },
              "result": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/ResponsePost"
                }
              }
            }
          }
        }
      },
      "ResponsePostNoContent": {
        "type": "object",
