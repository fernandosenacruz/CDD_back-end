  "components": {
    "schemas": {
      "RequestLogin": {
        "type": "object",
        "properties": {
          "userName": {
            "type": "string",
            "description": "Usuário",
            "example": "ximira"
          },
          "password": {
            "type": "string",
            "description": "Senha",
            "example": "123456"
          }
        },
        "required": ["userName", "password"]
      },
      "RequestCreatePost": {
        "type": "object",
        "properties": {
          "phrase": {
            "type": "string",
            "description": "Frase 'desmotivacional' com finalidade humorística",
            "example": "Se ainda não ficou rico com o curso 'Python do zero ao avançado em um dia' do mano Deyvin, saiba que ele está."
          },
          "imgURL": {
            "type": "string",
            "description": "Link da imagem",
            "example": "https://media.licdn.com/dms/image/D4D03AQF1wM2aJhMBrg/profile-displayphoto-shrink_800_800/0/1692880496551?e=1708560000&v=beta&t=fcREhRlJHGio6TLtrDeWaV_tOdV8JhsDfR978FdNaVc"
          },
          "authorId": {
            "type": "number",
            "description": "Id do usuário",
            "example": "1"
          }
        },
        "required": ["phrase", "authorId"]
      },
      "RequestUpdatePost": {
        "type": "object",
        "properties": {
          "phrase": {
            "type": "string",
            "description": "Atualiza frase 'desmotivacional'"
          },
          "imgURL": {
            "type": "string",
            "description": "Atualiza o link da imagem"
          }
        }
      },
      "RequestCreateUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome do usuário",
            "example": "Ximira"
          },
          "email": {
            "type": "string",
            "description": "Email do usuario (Unique)",
            "example": "ximira@prisma.io"
          },
          "password": {
            "type": "string",
            "description": "Senha do usuário",
            "example": "123456"
          },
          "userName": {
            "type": "string",
            "description": "Nick do usuário",
            "example": "ximira"
          }
        },
        "required": ["name", "email", "password", "userName"]
      },
      "RequestUpdateUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome do usuário",
            "example": "Ximira"
          },
          "userName": {
            "type": "string",
            "description": "Nick do usuário",
            "example": "ximira"
          }
        }
      },
      "ResponseUnauthorized": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "number",
            "example": "401"
          },
          "message": {
            "type": "string",
            "example": "Token inválido"
          }
        }
      },
      "ResponsePostNotFound": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "number",
            "example": "404"
          },
          "message": {
            "type": "string",
            "example": "Post não encontrado"
          }
        }
      },
      "ResponseLogin": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Usuário encontrado com sucesso"
          },
          "statusCode": {
            "type": "number",
            "example": "200"
          },
          "post": {
            "type": "object",
            "$ref": "#/components/schemas/ResponseUser"
          }
        }
      },
      "ResponsePost": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "Id da postagem",
            "example": "1"
          },
          "phrase": {
            "type": "string",
            "example": "Se ainda não ficou rico com o curso 'Python do zero ao avançado em um dia' do mano Deyvin, saiba que ele está."
          },
          "imgURL": {
            "type": "string",
            "example": "https://media.licdn.com/dms/image/D4D03AQF1wM2aJhMBrg/profile-displayphoto-shrink_800_800/0/1692880496551?e=1708560000&v=beta&t=fcREhRlJHGio6TLtrDeWaV_tOdV8JhsDfR978FdNaVc"
          },
          "authorId": {
            "type": "number",
            "description": "Id do usuário",
            "example": "1"
          },
          "createdAt": {
            "type": "string",
            "description": "Data como timestamp da criação",
            "example": "2023-12-08T19:42:08.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Data como timestamp da atualização",
            "example": "2023-12-08T19:42:08.000Z"
          },
          "published": {
            "type": "boolean",
            "description": "Valor boleano referente à publicação da postagem",
            "example": "false"
          }
        }
      },
      "ResponseCreatedPost": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Post criado com sucesso, aguardando moderação de conteúdeo..."
          },
          "statusCode": {
            "type": "number",
            "example": "201"
          },
          "post": {
            "type": "object",
            "$ref": "#/components/schemas/ResponsePost"
          }
        }
      },
      "ResponseUpdatedPost": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Post atualizado com sucesso"
          },
          "statusCode": {
            "type": "number",
            "example": "200"
          },
          "post": {
            "type": "object",
            "$ref": "#/components/schemas/ResponsePost"
          }
        }
      },
      "ResponsePosts": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Posts encotrados com sucesso"
          },
          "statusCode": {
            "type": "number",
            "example": "200"
          },
          "posts": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "number",
                "example": "50"
              },
              "page": {
                "type": "number",
                "example": "1"
              },
              "totalPages": {
                "type": "number",
                "example": "1"
              },
              "count": {
                "type": "number",
                "example": "3"
              },
              "exceedCount": {
                "type": "boolean",
                "example": "false"
              },
