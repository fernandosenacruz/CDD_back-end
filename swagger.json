          "posts": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "number",
                "example": "50"
              },
              "page": {
                "type": "number",
                "example": "1"
              },
              "totalPages": {
                "type": "number",
                "example": "1"
              },
              "count": {
                "type": "number",
                "example": "3"
              },
              "exceedCount": {
                "type": "boolean",
                "example": "false"
              },
              "exceedTotalPages": {
                "type": "boolean",
                "example": "false"
              },
              "hasNextPage": {
                "type": "boolean",
                "example": "false"
              },
              "hasPrevPage": {
                "type": "boolean",
                "example": "false"
              },
              "result": {
                "type": "array"
              }
            }
          }
        }
      },
      "ResponseUserNoContent": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Nenhum usuário encontrado"
          },
          "statusCode": {
            "type": "number",
            "example": "204"
          },
          "users": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "number",
                "example": "50"
              },
              "page": {
                "type": "number",
                "example": "1"
              },
              "totalPages": {
                "type": "number",
                "example": "1"
              },
              "count": {
                "type": "number",
                "example": "3"
              },
              "exceedCount": {
                "type": "boolean",
                "example": "false"
              },
